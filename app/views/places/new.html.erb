<div class="col-sm-8 col-sm-offset-2">
          <div class="review_single">
            <h1>Create a new place:</h1>

            <%= form_tag '/places', method: :post do %>

              <div>
                <%= label_tag :name %>
                <%= text_field_tag :name %>
              </div>
              
              
              <div>
                <%= label_tag :image_url %>
                <%= text_field_tag :image_url %>
              </div>

              <div>
                <%= label_tag :category %>
                <%= select_tag(:category, options_for_select([['Hotel', 1], ['Club', 2], ['Restaurant', 3], ['Bar', 4], ['Other', 5]], :selected => params[:option])) %>
              </div>


              <%= submit_tag "Create Place" %>
            <% end %>
          </div>
        </div>
      </div>