<section>
    <div class="row">    
      <div class="col-sm-8 col-sm-offset-2">
        <div class="product_single" align="center">


        <p> <img src="<%= @place.image_url %>" style="height:250px;width:450px"> </img></p>
            <h2><%= @place.name %></h2>

            <a href="/places/<%= @place.id%>/reviews/new" class="btn btn-info" role="button">Post Review for <%= @place.name %> </a>
        
        </div>

        <h3>Reviews:</h3>
        <p>
        <% @place.reviews.each do |review| %>
          Rating:<%= review.rating %><br>
          Description: <%= review.description %> <br>
          User: <%= review.user.name %> <br>
          </p>
        <% end %>


      </div>
    </div>
  </section>